<%- include("../partials/header") %>


<div class="container">
    <header class="jumbotron">
            <div class="container">
            <h1>Welcome to Yelp Camp</h1>
            <p>The best campgrounds solution for you!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a>
            </p>
        </div>
        
    </header>

    
    <div class="row d-flex flex-wrap">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-4 col-md-6 my-3">
                <div class="card img-thumbnail">
                    <img class="card-img-top" src="<%= campground.image%>" alt="Photo" style="width: 100%; height: 40vh; object-fit: cover;">
                    <div class="caption">
                        <h4 class="card-title"><%= campground.name %></h4>
                        <p>
                            <a href="/campgrounds/<%=campground._id%>" class= "btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }) %>

    </div>
</div>
<%- include("../partials/footer") %>
