<%- include("../partials/header") %>

<div class="container">
    <h1 class="campground-heading">Create a new campground!</h1>
    <div class="form-style">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image URL">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="Price in $" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <textarea name="description" class="form-control" cols="35" rows="15" placeholder="Give some description"></textarea>
            </div>
            <button class="btn btn-md btn-info btn-block btn-submit">Submit</button>
        </form> 
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include("../partials/footer") %>